<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GET CRUD</title>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td,
        th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }

        .btn-edit {
            background-color: greenyellow;
            border-radius: 3px;
            cursor: pointer;
            width: 50px;
        }

        .btn-delete {
            background-color: red;
            border-radius: 3px;
            cursor: pointer;
            width: 60px;
        }
    </style>
</head>

<body>

    <h2>GET CRUD Tables</h2>

    <table>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
        <% for(let i=0; i < dataTableUser.length; i++) { %>
            <tr>
                <td>
                    <%= dataTableUser[i].email %>
                </td>
                <td>
                    <%= dataTableUser[i].firstName %>
                </td>
                <td>
                    <%= dataTableUser[i].lastName %>
                </td>
                <td>
                    <%= dataTableUser[i].address %>
                </td>
                <td>
                    <a href="/edit-crud?id=<%= dataTableUser[i].id %>" class="btn-edit" type="button">Edit</a>
                    <a href="" class="btn-delete" type="button">Delete</a>
                </td>
            </tr>
            <% } %>
    </table>

</body>

</html>